<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace ="commentMapper">

<select id="getSocialComment" resultType="socialCommentDto">
SELECT *
  FROM SOCIALCOMMENT
 WHERE SOCIALNUM = #{socialNum}
</select>


<select id="getCommentNum" resultType="_int">
SELECT COMMENTNUM_SEQ.NEXTVAL FROM DUAL
</select>


<insert id="onComment" parameterType="socialCommentDto">
INSERT INTO SOCIALCOMMENT 
VALUES (#{commentNum},#{socialNum},#{content},#{writer},SYSDATE)
</insert>


</mapper>